{
  "name": "elytra",
  "version": "0.0.1",
  "description": "Efficient scalable Minecraft server",
  "main": "index.js",
  "repository": "git@github.com:dannytech/Elytra.git",
  "author": "Daniel Hellstern <elytra@daniel.hellstern.org>",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "dev": "tsc-watch --incremental --noClear --onSuccess 'node dist/index.js'",
    "build": "tsc",
    "build:ci": "tsc --sourceMap false",
    "test": "ava",
    "test:ci": "c8 ava --tap | tap-xunit",
    "coverage:ci": "c8 report --check-coverage",
    "lint": "eslint .",
    "lint:ci": "eslint --format junit $(circleci tests glob \"src/**/*.ts\" | circleci tests split)"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "colors": "^1.4.0",
    "dotenv-extended": "^2.8.0",
    "joi": "^17.9.1",
    "rethinkdb-ts": "^2.5.4",
    "uuid": "^8.1.0",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.39",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "ava": "^5.2.0",
    "c8": "^7.13.0",
    "eslint": "^8.17.0",
    "tap-xunit": "^2.4.1",
    "ts-node": "^8.10.2",
    "tsc-watch": "^5.0.3",
    "typescript": "^3.9.6"
  }
}
