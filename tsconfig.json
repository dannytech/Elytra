{
    "compilerOptions": {
        "module": "Node16",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist/",
        "target": "ES6",

        // Required to support type-graphql
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    },
    "files": [
        "index.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "**/node_modules",
        "**/.*/"
    ]
}